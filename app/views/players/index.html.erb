<body>
  
<div class="highscore_board">
<p class="reward"><%= @notice %></p>

<h1>25 HIGH SCORES</h1>

<table>
  <thead>
    <tr>
      <th>Player</th>
      <th>Score</th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr <% if @playa.to_i == player.id %>class="winner"<% end %> >
        <td><%= player.name %></td>
        <td><%= player.score %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<%= link_to 'New Game', new_player_path, :class => "button"  %>

</div>

</body>